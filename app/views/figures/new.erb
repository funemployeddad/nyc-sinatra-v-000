<form action="/figures/new" method="post">
<label><h3> Figure </h3></label>
  <input id="figure_name" type="text" name="figure[name]">

  <br></br>

<label><h4> Titles: </h4></label>
<% Title.all.each do |title| %>
  <label><%= title.name %></label>
  <input id="title_<%=title.id%>" type="checkbox" name= "figure[title_ids][]" value="<%=title.id%>"><br>
  <% end %>


<label><h4>Create New Title: </h4></label>
<input type="text" id="new_title" name="title[name]">

<br></br>

<label><h4> Landmarks: </h4></label>
<% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input id="landmark_<%=landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id %>"> <br>
  <% end %>

<label><h4> Create New Landmark </h4></label>
  <input type="text" id="new_landmark" name="landmark[name]">


<button type="submit">Create New Figure </button>
</form>
